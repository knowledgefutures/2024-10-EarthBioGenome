import logoWhite from '~/assets/logoWhite.png';
import { Image } from 'astro:assets';
import { Input } from '~/components/ui/input';

const isLanding = Astro.url.pathname === '/';
const links = [
	{ title: 'Explore', href: '/explore', active: Astro.url.pathname.startsWith('/explore') },
	{ title: 'Projects', href: '/projects', active: Astro.url.pathname.startsWith('/projects') },
	{ title: 'Community', href: '/community', active: Astro.url.pathname.startsWith('/community') },
	{ title: 'About', href: '/about', active: Astro.url.pathname.startsWith('/about') },
];
---

<section class={`bg-[url('/header-bg.jpg')] bg-cover`}>
	<nav class={`w-content py-4 flex justify-between items-center border-b-neutral-300 text-white`}>
		<a href="/"><Image class="h-16 w-auto" src={logoWhite} alt="logo" /></a>
		<div class="flex space-x-8">
			{
				links.map((link) => {
					return (
						<a
							href={link.href}
							class={
								link.active ? 'underline underline-offset-4' : 'underline-offset-4'
							}
						>
							{link.title}
						</a>
					);
				})
			}
		</div>
	</nav>
	{
		isLanding && (
			<div class="flex items-center">
				<Input
					className="mt-48 mb-32 max-w-screen-sm mx-auto text-xl py-8 bg-white/75"
					placeholder="Search by species or common name..."
				/>
			</div>
		)
	}
</section>
